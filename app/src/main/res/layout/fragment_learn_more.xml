                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="What is burnout?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Burnout is a state of emotional, physical and mental exhastion from exessive and prolonged stress. You are overwhelmed, emotionally drained and unable to keep up with daily activities."
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Burnout reduces productivity and saps your energy, leaving you feeling increasingly helpless, hopless, cynical and resentful. Eventualy, you may feel like you have nothing more to give."
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The major causes of burnout stem from overwork, confusing work responsibilities, Monotonous work, Immense deadline pressure, Lack of sleep and a Lack of close surportive relationships among other things."
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This app will help you in dealing with the above mentioned causes"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

